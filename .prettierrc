{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "printWidth": 80,
  "overrides": [
    {
      "files": ["*.json", "*.json5", ".prettierrc", "*.jsonc"],
      "options": {
        "printWidth": 200
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.toml, pyproject.toml"],
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "printWidth": 100
      }
    }
  ]
}
