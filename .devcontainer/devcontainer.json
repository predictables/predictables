{
  "privileged": true,
  "dockerComposeFile": "compose.yml",
  "service": "py",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.github-vscode-theme",
        "tamasfe.even-better-toml",
        "esbenp.prettier-vscode",
        "vscode-icons-team.vscode-icons",
        "usernamehw.errorlens",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-python.flake8",
        "rodolphebarbanneau.python-docstring-highlighter",
        "ritwickdey.LiveServer",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    },
    "settings": {
      "workbench.panel.defaultLocation": "bottom",
      "workbench.colorTheme": "GitHub Dark High Contrast",
      "editor.fontFamily": "JetBrainsMono Nerd Font",
      "editor.fontWeight": "100",
      "editor.fontLigatures": true,
      "editor.fontSize": 16,
      "editor.lineHeight": 1.2,
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.formatOnPaste": true,
      "editor.defaultFormatter": "charliermarsh.ruff",
      "terminal.integrated.shell.linux": "/bin/zsh",
      "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
      "terminal.integrated.defaultShell.linux": "/bin/zsh",
      "python.analysis.ignore": ["*"],
      "ruff.linting.enabled": true,
      "ruff.interpreter": [".venv/bin/python", "/usr/bin/py", "/usr/bin/python3"],
      "ruff.showNotifications": "onWarning",
      "terminal.integrated.copyOnSelection": true,
      "terminal.integrated.defaultProfile.linux": "zsh",
      "terminal.integrated.showExitAlert": false,
      "terminal.integrated.fontSize": 16,
      "terminal.integrated.fontWeight": "500",
      "notebook.output.fontSize": 15,
      "notebook.output.lineHeight": 1.2
    }
  },
  // "postBuildCommand": "chmod +x /app/.devcontainer/install_code_server && sh /app/.devcontainer/install_code_server",
  "postAttachCommand": "install_dotfiles $HOME .zshrc .zsh_aliases && exec zsh && install_dotfiles /app .ruff.toml .prettierrc .mypy.ini .flake8 && py -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt && pip install ruff ruff-lsp mypy flake8 pytest coverage pytest-cov pytest-flake8"
}
